# ============================================
# üåç ENVIRONMENT
# ============================================
NODE_ENV=development
PORT=5000

# ============================================
# üóÑÔ∏è DATABASE
# ============================================
DATABASE_URL=postgresql://pbj_user:YOUR_PASSWORD_HERE@localhost:5432/pbj_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pbj_db
DB_USER=pbj_user
DB_PASSWORD=YOUR_PASSWORD_HERE

# ============================================
# üîê JWT AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_RANDOM_SECRET_HERE
JWT_EXPIRE=7d

# ============================================
# üåê CORS & FRONTEND
# ============================================
FRONTEND_URL=http://localhost:9001

# ============================================
# üêõ DEBUG
# ============================================
DEBUG=false

# ============================================
# ü§ñ n8n INTEGRATION (Backend only)
# ============================================
# Your n8n webhook URLs should ONLY be in backend .env.local
# Frontend should call YOUR backend API, which then calls n8n
# See: docs/API_SECURITY.md for implementation guide

N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/YOUR_WEBHOOK_ID_HERE
N8N_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

